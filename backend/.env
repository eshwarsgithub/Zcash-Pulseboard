# Zcash Pulseboard - Live Configuration

# Live data integration enabled for hackathon
ENABLE_LIVE_DATA=true

# Refresh every 5 minutes for fresh demo data
REFRESH_INTERVAL_MINUTES=5

# API endpoints
ZCHAIN_API_URL=https://api.zcha.in/v2/mainnet
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Database
DB_PATH=data/zcash_pulse.duckdb

# Anomaly detection
ENABLE_ANOMALY_DETECTION=true
ANOMALY_ZSCORE_THRESHOLD=2.5

# Alerting (add your Discord webhook URL here)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR-WEBHOOK-URL

# Logging
LOG_LEVEL=INFO
