# Zcash Pulseboard Configuration
# Copy this file to .env and customize as needed

# =====================================
# API ENDPOINTS
# =====================================
ZCHAIN_API_URL=https://api.zcha.in/v2/mainnet
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# API Keys (optional)
# COINGECKO_API_KEY=your_coingecko_api_key_here

# =====================================
# DATABASE
# =====================================
DB_PATH=data/zcash_pulse.duckdb

# =====================================
# DATA REFRESH
# =====================================
# How often to fetch fresh data (in minutes)
REFRESH_INTERVAL_MINUTES=5

# Enable/disable live data fetching (set to false to use sample data only)
ENABLE_LIVE_DATA=true

# =====================================
# ALERTING & NOTIFICATIONS
# =====================================
# Discord webhook URL for alerts
# Get yours from: Discord Server Settings > Integrations > Webhooks
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Slack webhook URL (alternative to Discord)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url

# Minimum alert severity to send notifications: "low", "medium", "high"
ALERT_SEVERITY_THRESHOLD=medium

# =====================================
# ANOMALY DETECTION
# =====================================
# Enable/disable automatic anomaly detection
ENABLE_ANOMALY_DETECTION=true

# Z-score threshold for anomaly detection (standard deviations)
# Higher = fewer alerts, more confidence
# Typical values: 2.0 (sensitive), 2.5 (balanced), 3.0 (conservative)
ANOMALY_ZSCORE_THRESHOLD=2.5

# =====================================
# LOGGING
# =====================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
